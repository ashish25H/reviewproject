<section class="photos-section">

    <!-- Button trigger modal -->
    <div class="add-photo-btn">
        <button type="button" class="btn btn-primary " data-bs-toggle="modal" data-bs-target="#exampleModal">
            Add Photo
        </button>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="photo-url" class="form-label">Image URL</label>
                        <input type="url" class="form-control" id="photo-url" placeholder="Enter image url" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="add-photo-btn">Submit</button>
                </div>
            </div>
        </div>
    </div>

    <ul class='photo-list'>
        {{#photosArr}}
        <li class='photo-list-item'>
            <img src="{{url}}" alt="{{title}}">
        </li>
        {{/photosArr}}

        {{#userPhotos}}
        <li class='photo-list-item'>
            <img src="{{.}}" alt="image">
        </li>
        {{/userPhotos}}
    </ul>
</section>